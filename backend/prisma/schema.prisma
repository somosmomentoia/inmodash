// Modelo: Subscription (Suscripciones de MercadoPago)
model Subscription {
  id                        Int       @id @default(autoincrement())
  userId                    Int
  user                      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // MercadoPago IDs
  mercadopagoSubscriptionId String?   @unique @db.VarChar(255) // ID de la suscripción en MP
  mercadopagoCustomerId     String?   @db.VarChar(255) // ID del cliente en MP
  mercadopagoPreapprovalId  String?   @unique @db.VarChar(255) // ID del preapproval plan
  
  // Subscription Details
  plan                      String    @db.VarChar(50) // professional, enterprise, etc
  status                    String    @db.VarChar(50) // pending, authorized, paused, cancelled
  amount                    Float     // Monto mensual
  currency                  String    @default("ARS") @db.VarChar(10) // ARS, USD, etc
  
  // Billing Cycle
  billingDay                Int?      // Día del mes para cobro (1-31)
  frequency                 Int       @default(1) // Frecuencia en meses
  frequencyType             String    @default("months") @db.VarChar(20) // months, days
  
  // Dates
  startDate                 DateTime  // Fecha de inicio
  nextBillingDate           DateTime? // Próxima fecha de cobro
  endDate                   DateTime? // Fecha de finalización (si aplica)
  
  // Payment Info
  lastPaymentDate           DateTime?
  lastPaymentStatus         String?   @db.VarChar(50)
  lastPaymentAmount         Float?
  
  // Trial
  isTrialActive             Boolean   @default(false)
  trialEndDate              DateTime?
  
  // Metadata
  metadata                  String?   @db.Text // JSON con info adicional
  
  // Timestamps
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  
  // Relaciones
  payments                  SubscriptionPayment[]
  
  @@index([userId])
  @@index([mercadopagoSubscriptionId])
  @@index([status])
  @@map("subscriptions")
}

// Modelo: SubscriptionPayment (Pagos de Suscripción)
model SubscriptionPayment {
  id                    Int          @id @default(autoincrement())
  subscriptionId        Int
  subscription          Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  // MercadoPago Payment Info
  mercadopagoPaymentId  String       @unique @db.VarChar(255)
  
  // Payment Details
  amount                Float
  currency              String       @db.VarChar(10)
  status                String       @db.VarChar(50) // approved, pending, rejected, refunded
  statusDetail          String?      @db.VarChar(255)
  
  // Payment Method
  paymentMethodId       String?      @db.VarChar(255)
  paymentType           String?      @db.VarChar(50) // credit_card, debit_card, etc
  
  // Dates
  paidAt                DateTime?
  createdAt             DateTime     @default(now())
  
  // Metadata
  metadata              String?      @db.Text // JSON con info adicional de MP
  
  @@index([subscriptionId])
  @@index([mercadopagoPaymentId])
  @@index([status])
  @@map("subscription_payments")
}

// Modelo: Task (Tareas del usuario)
model Task {
  id          Int       @id @default(autoincrement())
  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Información de la tarea
  title       String    @db.VarChar(255)
  description String?   @db.Text
  
  // Fechas
  dueDate     DateTime?              // Fecha de vencimiento
  completedAt DateTime?              // Fecha de completado
  
  // Estado
  status      TaskStatus @default(pending)
  priority    TaskPriority @default(medium)
  
  // Relaciones opcionales (para vincular con entidades)
  contractId  Int?
  contract    Contract? @relation(fields: [contractId], references: [id], onDelete: SetNull)
  apartmentId Int?
  apartment   Apartment? @relation(fields: [apartmentId], references: [id], onDelete: SetNull)
  ownerId     Int?
  owner       Owner?    @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  tenantId    Int?
  tenant      Tenant?   @relation(fields: [tenantId], references: [id], onDelete: SetNull)
  obligationId Int?
  obligation  Obligation? @relation(fields: [obligationId], references: [id], onDelete: SetNull)
  contactId   Int?
  contact     Contact?  @relation(fields: [contactId], references: [id], onDelete: SetNull)
  
  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([dueDate])
  @@index([priority])
  @@map("tasks")
}

