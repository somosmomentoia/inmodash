// Modelo: TenantUser (Vinculación User ↔ Tenant)
// Un User con role='tenant' puede estar vinculado a múltiples Tenants (ej: local + cochera)
// Todos los Tenants vinculados deben pertenecer a la misma agencia (userId)
model TenantUser {
  id        Int      @id @default(autoincrement())
  userId    Int      // User (role = 'tenant')
  tenantId  Int      // Tenant existente (inquilino de negocio)
  createdAt DateTime @default(now())
  
  // Relaciones
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, tenantId])
  @@index([userId])
  @@index([tenantId])
  @@map("tenant_users")
}

// Modelo: TenantInvite (Invitación al Portal)
// Tokens de invitación para que inquilinos activen su cuenta en el portal
// El inquilino elige su email al activar la cuenta, no se requiere al generar la invitación
model TenantInvite {
  id        Int       @id @default(autoincrement())
  tenantId  Int       // Tenant al que se invita
  token     String    @unique @db.VarChar(255) // UUID único
  expiresAt DateTime  // Fecha de expiración (7 días desde creación)
  usedAt    DateTime? // Fecha en que se usó (null = no usado)
  createdAt DateTime  @default(now())
  
  // Relación
  tenant    Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([token])
  @@map("tenant_invites")
}

// ============================================
// MÓDULO DE CONTABILIDAD
// ============================================

// Modelo: AccountingEntry (Asientos Contables)
// Registra hitos históricos de la contabilidad de la inmobiliaria
// Principalmente: comisiones cobradas al realizar liquidaciones
model AccountingEntry {
  id            Int                   @id @default(autoincrement())
  userId        Int                   // Multi-tenancy
  
  // Tipo de asiento
  type          AccountingEntryType
  
  // Descripción del movimiento
  description   String                @db.VarChar(500)
  
  // Monto (positivo = ingreso, negativo = egreso)
  amount        Decimal               @db.Decimal(12, 2)
  
  // Fecha del movimiento
  entryDate     DateTime              @db.Date
  
  // Período contable (mes/año al que corresponde)
  period        DateTime              @db.Date
  
  // Referencias opcionales
  settlementId  Int?                  // Liquidación que originó este asiento
  ownerId       Int?                  // Propietario relacionado
  contractId    Int?                  // Contrato relacionado
  obligationId  Int?                  // Obligación relacionada
  
  // Metadata adicional (JSON)
  metadata      Json?
  
  // Timestamps
  createdAt     DateTime              @default(now())
  
  // Relaciones
  user          User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  settlement    Settlement?           @relation(fields: [settlementId], references: [id], onDelete: SetNull)
  owner         Owner?                @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  contract      Contract?             @relation(fields: [contractId], references: [id], onDelete: SetNull)
  obligation    Obligation?           @relation(fields: [obligationId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([type])
  @@index([entryDate])
  @@index([period])
  @@index([settlementId])
  @@index([ownerId])
  @@map("accounting_entries")
}

// Enum: AccountingEntryType
enum AccountingEntryType {
  commission          // Comisión cobrada por alquiler
  commission_service  // Comisión por servicio adicional
  expense             // Gasto operativo de la inmobiliaria
  income_other        // Otro ingreso
  adjustment          // Ajuste contable
}
