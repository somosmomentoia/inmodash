// ============================================
// MÓDULO DE PROSPECTOS (Leasing)
// ============================================

// Modelo: Prospect (Prospecto/Interesado)
// Representa a una persona interesada en alquilar una propiedad
// ANTES de convertirse en Inquilino (Tenant)
model Prospect {
  id            Int             @id @default(autoincrement())
  userId        Int             // Multi-tenancy
  
  // Datos personales
  fullName      String          @db.VarChar(255)
  phone         String          @db.VarChar(50)
  email         String?         @db.VarChar(255)
  dniOrCuit     String?         @db.VarChar(20) // Opcional hasta conversión
  
  // Propiedad de interés
  apartmentId   Int?            // Propiedad específica de interés
  
  // Origen del prospecto
  source        ProspectSource  @default(other)
  
  // Estado del proceso
  status        ProspectStatus  @default(new)
  
  // Notas generales
  notes         String?         @db.Text
  
  // Trazabilidad de conversión
  convertedToTenantId   Int?    @unique // Si se convirtió, ID del inquilino creado
  convertedToContractId Int?    @unique // Si se convirtió, ID del contrato creado
  convertedAt           DateTime?
  
  // Timestamps
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  // Relaciones
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  apartment     Apartment?      @relation(fields: [apartmentId], references: [id], onDelete: SetNull)
  convertedToTenant   Tenant?   @relation("ProspectToTenant", fields: [convertedToTenantId], references: [id], onDelete: SetNull)
  convertedToContract Contract? @relation("ProspectToContract", fields: [convertedToContractId], references: [id], onDelete: SetNull)
  
  // Historial de acciones
  activities    ProspectActivity[]
  
  // Documentos adjuntos
  documents     ProspectDocument[]
  
  @@index([userId])
  @@index([apartmentId])
  @@index([status])
  @@index([source])
  @@index([createdAt])
  @@map("prospects")
}

// Enum: ProspectSource (Origen del prospecto)
enum ProspectSource {
  whatsapp      // WhatsApp
  web           // Sitio web / Portal
  referral      // Referido
  walk_in       // Visita espontánea
  phone         // Llamada telefónica
  social_media  // Redes sociales
  other         // Otro
}

// Enum: ProspectStatus (Estados del prospecto)
// Flujo lineal: new → contacted → visited → under_review → approved/rejected → converted
enum ProspectStatus {
  new           // Nuevo - recién ingresado
  contacted     // Contactado - se estableció comunicación
  visited       // Visitó la propiedad
  under_review  // En evaluación - documentación en revisión
  approved      // Aprobado - listo para firmar contrato
  rejected      // Rechazado - no califica
  converted     // Convertido - ya es inquilino con contrato
}

// Modelo: ProspectActivity (Historial de acciones)
// Timeline de todas las acciones realizadas sobre el prospecto
model ProspectActivity {
  id          Int                   @id @default(autoincrement())
  prospectId  Int
  
  // Tipo de actividad
  type        ProspectActivityType
  
  // Descripción de la actividad
  description String                @db.Text
  
  // Metadata adicional (ej: estado anterior/nuevo en cambios de estado)
  metadata    Json?
  
  // Timestamp
  createdAt   DateTime              @default(now())
  
  // Relación
  prospect    Prospect              @relation(fields: [prospectId], references: [id], onDelete: Cascade)
  
  @@index([prospectId])
  @@index([createdAt])
  @@map("prospect_activities")
}

// Enum: ProspectActivityType
enum ProspectActivityType {
  created           // Prospecto creado
  status_changed    // Cambio de estado
  note_added        // Nota agregada
  document_uploaded // Documento subido
  visit_scheduled   // Visita programada
  visit_completed   // Visita realizada
  contact_attempt   // Intento de contacto
  converted         // Convertido a contrato
  info_updated      // Información actualizada
}

// Modelo: ProspectDocument (Documentos del prospecto)
// DNI, recibos de sueldo, referencias, etc.
model ProspectDocument {
  id          Int       @id @default(autoincrement())
  prospectId  Int
  
  // Información del documento
  name        String    @db.VarChar(255)
  type        String    @db.VarChar(50) // dni, salary_receipt, reference, other
  fileUrl     String    @db.VarChar(500)
  fileSize    Int?      // Tamaño en bytes
  mimeType    String?   @db.VarChar(100)
  
  // Timestamps
  createdAt   DateTime  @default(now())
  
  // Relación
  prospect    Prospect  @relation(fields: [prospectId], references: [id], onDelete: Cascade)
  
  @@index([prospectId])
  @@map("prospect_documents")
}

