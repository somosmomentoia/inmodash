// Configuración del generador y datasource
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo: User (Usuario del sistema)
model User {
  id                    Int       @id @default(autoincrement())
  email                 String    @unique @db.VarChar(255)
  passwordHash          String    @db.VarChar(255)
  name                  String    @db.VarChar(255)
  role                  String    @default("user") @db.VarChar(50) // user, admin
  isEmailVerified       Boolean   @default(false)
  emailVerificationToken String?  @db.VarChar(255)
  emailVerificationExpires DateTime?
  passwordResetToken    String?   @db.VarChar(255)
  passwordResetExpires  DateTime?
  refreshTokenHash      String?   @db.VarChar(255)
  failedLoginAttempts   Int       @default(0)
  lockedUntil           DateTime?
  lastLoginAt           DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  // Datos del representante
  phone                 String?   @db.VarChar(50)
  position              String?   @db.VarChar(100) // Cargo en la inmobiliaria
  
  // Datos de la inmobiliaria
  companyName           String?   @db.VarChar(255)
  companyTaxId          String?   @db.VarChar(100) // CUIT/RUT/Tax ID
  companyAddress        String?   @db.VarChar(500)
  companyCity           String?   @db.VarChar(100)
  companyState          String?   @db.VarChar(100)
  companyCountry        String?   @db.VarChar(100)
  companyZipCode        String?   @db.VarChar(20)
  companyPhone          String?   @db.VarChar(50)
  companyWebsite        String?   @db.VarChar(255)
  
  // Datos de suscripción
  subscriptionStatus    String    @default("trial") @db.VarChar(50) // trial, active, suspended, cancelled
  subscriptionPlan      String    @default("professional") @db.VarChar(50) // professional
  subscriptionStartDate DateTime?
  subscriptionEndDate   DateTime?
  trialEndsAt           DateTime?
  
  // Datos de pago (por ahora opcionales)
  paymentMethod         String?   @db.VarChar(50) // credit_card, bank_transfer, etc
  lastPaymentDate       DateTime?
  nextPaymentDate       DateTime?
  
  // Preferencias del usuario (widgets, configuraciones de UI, etc)
  preferences           Json?     @default("{}")
  
  // Relaciones
  sessions  Session[]
  auditLogs AuditLog[]
  
  // Relaciones con el sistema inmobiliario (Multi-tenancy)
  buildings   Building[]
  apartments  Apartment[]
  tenants     Tenant[]
  owners      Owner[]
  contracts   Contract[]
  guarantors  Guarantor[]
  payments    Payment[]  // LEGACY - mantener para compatibilidad
  documents   Document[]
  
  // Nuevas relaciones - Sistema de Obligaciones
  obligations          Obligation[]
  obligationPayments   ObligationPayment[]
  recurringObligations RecurringObligation[]
  settlements          Settlement[]
  
  // Relación con WhatsApp Bot
  whatsappConfig WhatsAppConfig?
  
  // Relación con Suscripciones de MercadoPago
  subscriptions Subscription[]
  
  // Relación con Tareas
  tasks Task[]
  
  // Relación con Contactos
  contacts Contact[]
  
  // Relación con Notificaciones
  notifications Notification[]
  
  // Relación con Prospectos
  prospects Prospect[]
  
  // Relación con Tenant Portal
  tenantUsers TenantUser[]
  
  // Relación con Asientos Contables
  accountingEntries AccountingEntry[]
  
  @@index([email])
  @@index([role])
  @@map("users")
}

// Modelo: Session (Sesiones de usuario)
model Session {
  id           String   @id @default(cuid())
  userId       Int
  sessionToken String   @unique @db.VarChar(255)
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relación con User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionToken])
  @@map("sessions")
}

// Modelo: AuditLog (Log de auditoría)
model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String   @db.VarChar(100)
  resource  String   @db.VarChar(100)
  resourceId String? @db.VarChar(50)
  details   String?  @db.Text
  ipAddress String?  @db.VarChar(45)
  userAgent String?  @db.VarChar(500)
  createdAt DateTime @default(now())
  
  // Relación con User (opcional, para acciones anónimas)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// Modelo: Building (Edificio)
model Building {
  id        Int       @id @default(autoincrement())
  userId    Int       // Usuario propietario del edificio
  name      String    @db.VarChar(255)
  address   String    @db.VarChar(500)
  city      String    @db.VarChar(100)
  province  String    @db.VarChar(100)
  owner     String    @db.VarChar(255) // Campo legacy para compatibilidad
  ownerId   Int?      // Relación con Owner (opcional para migración gradual)
  floors    Int
  totalArea Float
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relaciones
  user            User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  ownerRelation   Owner?               @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  apartments      Apartment[]
  floorConfig     FloorConfiguration[]
  
  @@index([userId])
  @@index([name])
  @@index([ownerId])
  @@map("buildings")
}

// Modelo: FloorConfiguration
model FloorConfiguration {
  id              Int      @id @default(autoincrement())
  buildingId      Int
  floor           Int
  apartmentsCount Int
  
  // Relación
  building Building @relation(fields: [buildingId], references: [id], onDelete: Cascade)
  
  @@index([buildingId])
  @@map("floor_configurations")
}

// Modelo: Owner (Propietario)
model Owner {
  id                   Int         @id @default(autoincrement())
  userId               Int         // Usuario propietario del registro
  name                 String      @db.VarChar(255)
  dniOrCuit            String      @unique @db.VarChar(20)
  phone                String      @db.VarChar(50)
  email                String      @db.VarChar(255)
  address              String      @db.VarChar(500)
  bankAccount          String?     @db.VarChar(100)
  
  // Balance del propietario (positivo = a favor del propietario, negativo = debe a la inmobiliaria)
  balance              Float       @default(0)
  
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  
  // Relaciones
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  apartments         Apartment[]
  buildings          Building[]
  documents          Document[]
  settlements        Settlement[]
  obligationPayments ObligationPayment[] // Pagos aplicados al saldo del propietario
  tasks              Task[]              // Tareas vinculadas
  accountingEntries  AccountingEntry[]   // Asientos contables relacionados
  
  @@index([userId])
  @@index([dniOrCuit])
  @@map("owners")
}

// Modelo: Apartment (Departamento)
model Apartment {
  id              Int       @id @default(autoincrement())
  uniqueId        String    @unique @db.VarChar(100)
  
  // Usuario propietario del apartamento (para multi-tenancy)
  userId          Int?
  
  // Relación con edificio (OPCIONAL para departamentos independientes)
  buildingId      Int?
  floor           Int?
  apartmentLetter String?   @db.VarChar(20)
  nomenclature    String    @db.VarChar(100)
  
  // Campos para departamentos independientes (cuando no hay edificio)
  fullAddress     String?   @db.Text
  city            String?   @db.VarChar(200)
  province        String?   @db.VarChar(200)
  
  // Propietario (OPCIONAL)
  ownerId         Int?
  
  // Tipo de propiedad
  propertyType    String    @default("departamento") @db.VarChar(50)
  
  // Información general
  area            Float     @default(0)
  rooms           Int       @default(0)
  areaPercentage  Float     @default(0)
  roomPercentage  Float     @default(0)
  status          String    @default("disponible") @db.VarChar(50)
  saleStatus      String    @default("no_esta_en_venta") @db.VarChar(50)
  
  // Precio de alquiler (para WhatsApp Bot)
  rentalPrice     Float?
  
  // Especificaciones adicionales (JSON flexible según tipo de propiedad)
  specifications  String?   @db.Text
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relaciones
  user                 User?                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  building             Building?              @relation(fields: [buildingId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  owner                Owner?                 @relation(fields: [ownerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  contracts            Contract[]
  rentalHistory        RentalHistory[]
  documents            Document[]
  obligations          Obligation[]           // Nueva relación
  recurringObligations RecurringObligation[]  // Recurrencias vinculadas
  tasks                Task[]                 // Tareas vinculadas
  prospects            Prospect[]             // Prospectos interesados
  
  @@index([userId])
  @@index([buildingId])
  @@index([ownerId])
  @@index([status])
  @@map("apartments")
}

// Modelo: Tenant (Cliente/Inquilino)
model Tenant {
  id             Int       @id @default(autoincrement())
  userId         Int       // Usuario propietario del registro
  nameOrBusiness String    @db.VarChar(255)
  dniOrCuit      String    @db.VarChar(20)
  address        String    @db.VarChar(500)
  contactName    String    @db.VarChar(255)
  contactPhone   String    @db.VarChar(50)
  contactEmail   String    @db.VarChar(255)
  contactAddress String    @db.VarChar(500)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  // Relaciones
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  contracts         Contract[]
  rentalHistory     RentalHistory[]
  documents         Document[]
  tasks             Task[]            // Tareas vinculadas
  convertedFromProspect Prospect?     @relation("ProspectToTenant") // Prospecto que originó este inquilino
  
  // Relaciones Tenant Portal
  tenantUsers   TenantUser[]
  tenantInvites TenantInvite[]
  
  @@index([userId])
  @@index([dniOrCuit])
  @@map("tenants")
}

// Modelo: Guarantor (Garante)
// Los garantes pertenecen a la inmobiliaria (userId) y pueden asociarse a cualquier contrato
model Guarantor {
  id        Int      @id @default(autoincrement())
  userId    Int      // Multi-tenancy - pertenece al usuario/inmobiliaria
  name      String   @db.VarChar(255)
  dni       String   @db.VarChar(20)
  address   String   @db.VarChar(500)
  email     String   @db.VarChar(255)
  phone     String   @db.VarChar(50)
  
  // Documentos (PDFs)
  contractPdfUrl     String?  @db.VarChar(500)
  salaryReceiptPdfUrl String? @db.VarChar(500)
  
  // Soft delete
  isActive  Boolean  @default(true)
  deletedAt DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones
  user      User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  contracts ContractGuarantor[] @relation("GuarantorToContract")
  
  @@index([userId])
  @@index([isActive])
  @@map("guarantors")
}

// Modelo: Contract (Contrato)
model Contract {
  id                   Int       @id @default(autoincrement())
  userId               Int       // Usuario propietario del contrato
  apartmentId          Int
  tenantId             Int
  startDate            DateTime
  endDate              DateTime
  initialAmount        Float
  // Comisión de la inmobiliaria sobre alquileres
  commissionType       String?   @db.VarChar(20) // "percentage" o "fixed"
  commissionValue      Float?    // Valor de la comisión (% o monto fijo)
  contractDocumentPath String?   @db.VarChar(500) // Ruta al documento principal del contrato
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  // Relaciones
  user                 User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  apartment            Apartment              @relation(fields: [apartmentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tenant               Tenant                 @relation(fields: [tenantId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  updateRule           UpdateRule?
  guarantors           ContractGuarantor[]    @relation("ContractToGuarantor")
  rentalHistory        RentalHistory?
  payments             Payment[]              // LEGACY - mantener para compatibilidad
  documents            Document[]
  obligations          Obligation[]           // Nueva relación
  recurringObligations RecurringObligation[]  // Recurrencias vinculadas
  tasks                Task[]                 // Tareas vinculadas
  convertedFromProspect Prospect?             @relation("ProspectToContract") // Prospecto que originó este contrato
  accountingEntries    AccountingEntry[]      // Asientos contables relacionados
  
  @@index([userId])
  @@index([apartmentId])
  @@index([tenantId])
  @@map("contracts")
}

// Modelo: UpdateRule (Regla de Actualización)
model UpdateRule {
  id                    Int      @id @default(autoincrement())
  contractId            Int      @unique
  updateFrequency       String   @db.VarChar(50)
  monthlyCoefficient    Float?
  lateInterestPercent   Float?
  lateInterestFrequency String?  @db.VarChar(50)
  
  // Relaciones
  contract      Contract       @relation(fields: [contractId], references: [id], onDelete: Cascade)
  updatePeriods UpdatePeriod[]
  
  @@map("update_rules")
}

// Modelo: UpdatePeriod (Período de Actualización)
model UpdatePeriod {
  id           Int       @id @default(autoincrement())
  updateRuleId Int
  date         DateTime
  type         String    @db.VarChar(50)
  value        Float?
  indexName    String?   @db.VarChar(100)
  
  // Relación
  updateRule UpdateRule @relation(fields: [updateRuleId], references: [id], onDelete: Cascade)
  
  @@index([updateRuleId])
  @@map("update_periods")
}

// Modelo: Payment (Pago de Alquiler)
model Payment {
  id               Int       @id @default(autoincrement())
  userId           Int       // Usuario propietario del pago
  contractId       Int
  month            DateTime  // Mes al que corresponde el pago
  amount           Float     // Monto del alquiler
  commissionAmount Float     @default(0) // Comisión de la inmobiliaria
  ownerAmount      Float     @default(0) // Lo que recibe el propietario
  paymentDate      DateTime? // Fecha en que se realizó el pago
  status           String    @default("pending") @db.VarChar(20) // pending, paid, overdue
  notes            String?   @db.VarChar(500)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  // Relaciones
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contract Contract @relation(fields: [contractId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  
  @@index([userId])
  @@index([contractId])
  @@index([status])
  @@index([month])
  @@map("payments")
}

// Modelo: Obligation (Obligación/Deuda/Cargo)
// Reemplaza conceptualmente a Payment, soporta múltiples tipos
// El operador registra qué pasó, la app calcula quién gana/quién paga
model Obligation {
  id                  Int       @id @default(autoincrement())
  userId              Int       // Multi-tenancy
  contractId          Int?      // Opcional: puede no estar vinculado a contrato
  apartmentId         Int?      // Opcional: puede ser a nivel propiedad
  recurringObligationId Int?    // Vinculación a recurrencia (si fue generada por una)
  type                String    @db.VarChar(50) // "rent", "expenses", "service", "tax", "insurance", "maintenance", "debt"
  category            String?   @db.VarChar(100) // Subcategoría: luz/agua/gas para service, ABL/ARBA para tax, etc.
  description         String    @db.VarChar(500)
  period              DateTime  // Período al que corresponde (normalizado al primer día del mes)
  dueDate             DateTime  // Fecha de vencimiento
  amount              Float     // Monto total
  paidAmount          Float     @default(0) // Monto pagado (suma de ObligationPayments)
  
  // === DISTRIBUCIÓN DE DINERO ===
  // Quién paga esta obligación: "tenant", "owner", "agency"
  paidBy              String    @default("tenant") @db.VarChar(20)
  
  // Impacto en liquidación del propietario (puede ser + o -)
  // rent: ownerAmount = amount - commissionAmount (positivo, recibe dinero)
  // tax/maintenance: ownerImpact negativo (se descuenta de liquidación)
  ownerImpact         Float     @default(0)
  
  // Impacto en contabilidad de la inmobiliaria (puede ser + o -)
  // rent: agencyImpact = commissionAmount (positivo, comisión)
  // maintenance a cargo de agency: agencyImpact negativo (gasto)
  agencyImpact        Float     @default(0)
  
  // Campos legacy para compatibilidad (se calculan desde ownerImpact/agencyImpact)
  commissionAmount    Float     @default(0) // Comisión inmobiliaria (solo para type=rent)
  ownerAmount         Float     @default(0) // Monto propietario (solo para type=rent)
  
  status              String    @default("pending") @db.VarChar(20) // "pending", "partial", "paid", "overdue"
  isAutoGenerated     Boolean   @default(false) // true si fue generada automáticamente
  notes               String?   @db.Text
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  // Relaciones
  user                 User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  contract             Contract?            @relation(fields: [contractId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  apartment            Apartment?           @relation(fields: [apartmentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  recurringObligation  RecurringObligation? @relation(fields: [recurringObligationId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  obligationPayments   ObligationPayment[]
  tasks                Task[]               // Tareas vinculadas
  accountingEntries    AccountingEntry[]    // Asientos contables relacionados
  
  @@index([userId])
  @@index([contractId])
  @@index([apartmentId])
  @@index([recurringObligationId])
  @@index([type])
  @@index([status])
  @@index([period])
  @@index([dueDate])
  @@map("obligations")
}

// Modelo: ObligationPayment (Pago Real)
// Registra eventos de dinero, permite pagos parciales
model ObligationPayment {
  id            Int       @id @default(autoincrement())
  userId        Int       // Multi-tenancy
  obligationId  Int
  amount        Float     // Monto del pago
  paymentDate   DateTime  // Fecha real del pago
  method        String?   @db.VarChar(50) // "cash", "transfer", "check", "card", "other", "owner_balance"
  reference     String?   @db.VarChar(255) // Número de comprobante/referencia
  notes         String?   @db.VarChar(500)
  
  // Para pagos aplicados al saldo del propietario
  appliedToOwnerBalance Boolean @default(false) // Si se descontó del saldo del propietario
  ownerId               Int?    // Propietario afectado (si appliedToOwnerBalance = true)
  
  // Campos para Tenant Portal
  source         String?   @db.VarChar(50) // 'tenant_portal' | 'admin' | 'mercadopago_webhook'
  paymentGroupId String?   @db.VarChar(100) // UUID para agrupar pagos múltiples del carrito
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relaciones
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  obligation Obligation @relation(fields: [obligationId], references: [id], onDelete: Cascade)
  owner      Owner?     @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([obligationId])
  @@index([paymentDate])
  @@map("obligation_payments")
}

// Modelo: RecurringObligation (Obligación Recurrente)
// Define plantillas para generar obligaciones automáticamente cada mes
model RecurringObligation {
  id              Int       @id @default(autoincrement())
  userId          Int       // Multi-tenancy
  contractId      Int?      // Opcional: puede no estar vinculado a contrato
  apartmentId     Int?      // Opcional: puede ser a nivel propiedad
  type            String    @db.VarChar(50) // "rent", "expenses", "service", "tax", "insurance", "maintenance", "debt"
  category        String?   @db.VarChar(100) // Subcategoría opcional
  description     String    @db.VarChar(500)
  amount          Float     // Monto base (puede variar en cada generación)
  dayOfMonth      Int       // Día del mes para vencimiento (1-31)
  isActive        Boolean   @default(true) // Si está activa o pausada
  startDate       DateTime  // Desde cuándo empieza a generar
  endDate         DateTime? // Hasta cuándo genera (null = indefinido)
  lastGenerated   DateTime? // Último mes generado (YYYY-MM-01)
  notes           String?   @db.Text
  
  // === CONFIGURACIÓN DE DISTRIBUCIÓN (para type=rent principalmente) ===
  // Quién paga por defecto: "tenant", "owner", "agency"
  paidBy              String    @default("tenant") @db.VarChar(20)
  
  // Comisión inmobiliaria para alquileres
  // commissionType: "percentage" o "fixed"
  commissionType      String?   @db.VarChar(20)
  // commissionValue: porcentaje (ej: 10 = 10%) o monto fijo (ej: 10000)
  commissionValue     Float?
  
  // === CONFIGURACIÓN DE ACTUALIZACIÓN POR ÍNDICE (ICL/IPC) ===
  // Tipo de índice: "icl" (Índice para Contratos de Locación), "ipc" (Índice de Precios al Consumidor), "fixed" (coeficiente fijo), "none" (sin actualización)
  updateIndexType     String?   @db.VarChar(20)
  // Frecuencia de actualización en meses (ej: 4 = cada 4 meses)
  updateFrequencyMonths Int?
  // Valor del índice al inicio del contrato (para calcular variación)
  initialIndexValue   Float?
  // Fecha del valor inicial del índice
  initialIndexDate    DateTime?
  // Coeficiente fijo (solo si updateIndexType = "fixed")
  fixedUpdateCoefficient Float?
  // Último monto aplicado (después de actualizaciones)
  currentAmount       Float?
  // Última fecha de actualización aplicada
  lastUpdateApplied   DateTime?
  // Contador de períodos desde última actualización
  periodsSinceUpdate  Int       @default(0)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relaciones
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  contract        Contract?     @relation(fields: [contractId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  apartment       Apartment?    @relation(fields: [apartmentId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  obligations     Obligation[]  // Obligaciones generadas por esta recurrencia
  
  @@index([userId])
  @@index([contractId])
  @@index([apartmentId])
  @@index([isActive])
  @@index([lastGenerated])
  @@map("recurring_obligations")
}

// Modelo: Settlement (Liquidación a Propietario)
// Registra cuándo se liquidó dinero a un propietario
model Settlement {
  id              Int       @id @default(autoincrement())
  userId          Int       // Multi-tenancy
  ownerId         Int       // Propietario al que se liquida
  period          DateTime  // Período de la liquidación (YYYY-MM-01)
  totalCollected  Float     // Total cobrado en el período
  ownerAmount     Float     // Monto liquidado al propietario
  commissionAmount Float    // Comisión retenida por la inmobiliaria
  status          String    @default("pending") @db.VarChar(20) // "pending", "settled"
  settledAt       DateTime? // Fecha en que se marcó como liquidado
  paymentMethod   String?   @db.VarChar(50) // "transfer", "cash", "check"
  reference       String?   @db.VarChar(255) // Número de transferencia/comprobante
  notes           String?   @db.Text
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relaciones
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  owner           Owner     @relation(fields: [ownerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  
  // Asientos contables generados por esta liquidación
  accountingEntries AccountingEntry[]
  
  @@unique([userId, ownerId, period])
  @@index([userId])
  @@index([ownerId])
  @@index([period])
  @@index([status])
  @@map("settlements")
}

// Modelo: Document (Documentos)
model Document {
  id          Int       @id @default(autoincrement())
  userId      Int       // Usuario propietario del documento
  type        String    @db.VarChar(50) // dni, recibo_sueldo, contrato, garantia, otro
  fileName    String    @db.VarChar(255)
