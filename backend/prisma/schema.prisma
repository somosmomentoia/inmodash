  // Relaciones
  conversations   Conversation[]
  
  @@index([userId])
  @@index([phoneNumberId])
  @@map("whatsapp_configs")
}

// Modelo: Conversation (Conversación con Cliente)
model Conversation {
  id              Int      @id @default(autoincrement())
  
  configId        Int
  config          WhatsAppConfig @relation(fields: [configId], references: [id], onDelete: Cascade)
  
  // Customer Info
  phoneNumber     String   @db.VarChar(50) // Número del cliente
  customerName    String?  @db.VarChar(255)
  
  // Conversation State
  state           String   @default("initial") @db.VarChar(50) // initial, collecting_name, collecting_type, etc
  context         String   @default("{}") @db.Text // JSON con info recopilada
  
  // Timestamps
  lastMessageAt   DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relaciones
  messages        Message[]
  
  @@unique([configId, phoneNumber])
  @@index([configId])
  @@index([phoneNumber])
  @@index([lastMessageAt])
  @@map("conversations")
}

// Modelo: Message (Mensajes de la Conversación)
model Message {
  id              Int      @id @default(autoincrement())
  
  conversationId  Int
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  // Message Info
  direction       String   @db.VarChar(20) // incoming, outgoing
  content         String   @db.Text
  messageId       String?  @unique @db.VarChar(255) // ID del mensaje de WhatsApp
  
  // Metadata (datos extraídos por IA)
  extractedData   String?  @db.Text // JSON con datos extraídos
  
